<!DOCTYPE html>
<html>
  <head>
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout2.css">
  <link rel="stylesheet" href="/styles/modules.css">
  <link rel="stylesheet" href="/styles/themes.css">
  </head>
  <body>
    <header>Your Random Movie</header>
    <main>
      <ul>
        <img src="<%= randomMovieSelection.image_url %>" >
        <h2><%= randomMovieSelection.title %></h2>
        <p><%= randomMovieSelection.description %></p>
        <form action="/" method="post">
          <fieldset>
            <input type="hidden" name="movie_id" value="<%= randomMovieSelection.movie_id%>">
            <input type="hidden" name="image_url" value="<%= randomMovieSelection.image_url %>">
            <input type="hidden" name="title" value="<%= randomMovieSelection.title %>">
            <input type="hidden" name="description" value="<%= randomMovieSelection.description %>">
            <input type="hidden" name="seasonal_keyword" value="<%= randomMovieSelection.seasonal_keyword %>">
            <div>
              <button class="detail_button" type="submit">Add to Recommendations</button>
            </div>
          </fieldset>
        </form>
        <button type="button"><a href="/similar/<%= randomMovieSelection.movie_id %>">See Similar Titles</a></button>
      </ul>
      <h1>Testing!</h1>
      <button type="button" id="randomMovie" onclick="window.location.href='/random';">Random Movie</button>
      <button type="button" id="keywordSearch" onclick="window.location.href='/new';">Search by Genre</button>
      <button type="button" id="recommendations"onclick="window.location.href='/recommendations';">Recommendations</button>
      <button type="button" id="aboutUs" onclick="window.location.href='/about';">About Us</button>
    </main>
    <footer>
      <%- include('../partials/footer') -%>
    </footer>
  </body>
</html>