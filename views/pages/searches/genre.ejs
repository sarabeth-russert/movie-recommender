<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/styles/reset.css">
    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/layout5.css">
    <link rel="stylesheet" href="/styles/modules.css">
    <link rel="stylesheet" href="/styles/themes.css">
  </head>
  <body>
    <header>Genre Search Results</header>
    <main>
      <ul>
        <% genreResults.forEach(movie => { %>
          <li>
            <div>
              <img src="<%= movie.image_url %>" >
              <h2><%= movie.title %></h2>
              <p><%= movie.description %></p>
              <p><button type="button" >Add to Recommendations</button></p>
            </div>
          </li>
            <% }) %>
      </ul>
      <h1>Testing</h1>
      <button type="button" id="randomMovie" onclick="window.location.href='/random';">Random Movie</button>
      <button type="button" id="keywordSearch">Search by Keyword</button>
      <button type="button" id="recommendations">Recommendations</button>
      <button type="button" id="aboutUs" onclick="window.location.href='/about';">About Us</button>
    </main>
    <footer>
      <%- include('../partials/footer') -%>
    </footer>
  </body>
</html>