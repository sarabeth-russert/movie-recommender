    <link rel="stylesheet" href="/styles/layout3.css">
    <link rel="stylesheet" href="/styles/modules.css">
    <link rel="stylesheet" href="/styles/themes.css">
  </head>
  <body>
    <header>Write your review 
      <!-- update this for launch -->
    </header>
    <main>
      <form action='/reviews/<%= movie_id %>?_method=PUT' method="post">
        <fieldset>
          <input type=hidden name=movie_id value="<%= movie_id %>">
          <label for = "Author"></label>
          <span> Author </span>
          <input type=input name=author placeholder="name">
          </label>
          <label for = "review"></label>
          <span> Review </span>
          <input type=text name=review id="reviewbox" placeholder="review">
          </label>
        </fieldset>
        <button type="submit" id="submit">Add your review</button>
      </form>
    </main>
    <footer>
      <%- include('partials/footer') -%>
    </footer>
  </body>
</html>